{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "src/**/*"
  ]
}