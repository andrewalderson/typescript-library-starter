{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "./dist/esm5",
    "importHelpers": true,
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
